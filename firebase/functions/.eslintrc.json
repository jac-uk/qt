{
  "root": true,
  "env": {
    "node": true,
    "es6": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "plugins": ["promise"],
  "extends": ["eslint:recommended", "plugin:promise/recommended"],
  "rules": {
    "comma-dangle": ["error", {
      "objects": "always"
    }],
    "semi": "error",
    "func-style": ["error", "expression"],
    "prefer-arrow-callback": "error",
    "quotes": ["error", "single", { "avoidEscape": true}],
    "eol-last": ["error", "always"],
    "no-console": "off"
  }
}
