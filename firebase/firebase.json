{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": [
    {
      "target": "apply",
      "predeploy": "npm --prefix hosting/apply run build",
      "public": "hosting/apply/dist",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "apply-admin",
      "predeploy": "npm --prefix hosting/apply-admin run build",
      "public": "hosting/apply-admin/dist",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "reference",
      "public": "hosting/reference",
      "ignore": [
        "README.md",
        "**/.*",
        "**/node_modules/**",
        "**/cypress/**",
        "**/cypress.json"
      ],
      "redirects": [
        {
          "source": "/download-form/128.docx",
          "destination": "https://drive.google.com/uc?export=download&id=1ANHrCLDMHw8sUd4j8i9jALqD1xQB2uns",
          "type": 301
        }
      ]
    },
    {
      "target": "qt",
      "predeploy": "npm --prefix hosting/qt run build",
      "public": "hosting/qt/dist",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "qt-admin",
      "predeploy": "npm --prefix hosting/qt-admin run build",
      "public": "hosting/qt-admin/dist",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ],
  "functions": {
    "source": "functions"
  },
  "storage": {
    "rules": "storage.rules"
  }
}
