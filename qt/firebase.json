{
  "hosting": [
    {
      "target": "develop-qt-app",
      "public": ".",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ],
      "headers": [
        {
          "source": "**",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=300, s-maxage=3600, public"
            },
            {
              "key": "Strict-Transport-Security",
              "value": "max-age=31536000; includeSubDomains"
            },
            {
              "key": "X-Content-Type-Options",
              "value": "nosniff"
            },
            {
              "key": "X-Frame-Options",
              "value": "DENY"
            }
          ]
        },
        {
          "source": "*",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=150, s-maxage=1800, public"
            }
          ]
        },
        {
          "source": "**/*.@(jpg|jpeg|gif|png|svg)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=3600, s-maxage=86400, public"
            }
          ]
        },
        {
          "source": "**/*.@(html|css|js)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=301, s-maxage=3601, public"
            }
          ]
        }
      ]
    },
    {
      "target": "live-qt-app",
      "public": "dist",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ],
      "headers": [
        {
          "source": "**",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=300, s-maxage=3600, public"
            },
            {
              "key": "Strict-Transport-Security",
              "value": "max-age=31536000; includeSubDomains"
            },
            {
              "key": "X-Content-Type-Options",
              "value": "nosniff"
            },
            {
              "key": "X-Frame-Options",
              "value": "DENY"
            }
          ]
        },
        {
          "source": "*",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=150, s-maxage=1800, public"
            }
          ]
        },
        {
          "source": "**/*.@(jpg|jpeg|gif|png|svg)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=3600, s-maxage=86400, public"
            }
          ]
        },
        {
          "source": "**/*.@(html|css|js)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=301, s-maxage=3601, public"
            }
          ]
        }
      ]
    }
  ]
}
