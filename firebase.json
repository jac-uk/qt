{
  "database": {
    "rules": "firebase/database/realtime.rules.json"
  },
  "firestore": {
    "rules": "firebase/database/firestore.rules",
    "indexes": "firebase/database/firestore.indexes.json"
  },
  "storage": {
    "rules": "firebase/storage/storage.rules"
  },
  "functions": {
    "source": "firebase/functions",
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/v1**/**",
        "function": "api"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "auth": {
      "port": 9097
    },
    "functions": {
      "port": 5007
    },
    "firestore": {
      "port": 8087
    },
    "database": {
      "port": 9007
    },
    "pubsub": {
      "port": 8089
    },
    "storage": {
      "port": 9197
    },
    "ui": {
      "enabled": true,
      "port": 4007
    }
  }
}
