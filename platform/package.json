{
  "name": "jac-qualifying-tests",
  "version": "1.0.0",
  "description": "Firebase/GCP configuration and components for the JAC qualifying tests platform",
  "repository": "https://github.com/jac-uk/qt",
  "license": "MIT",
  "readme": "README.md",
  "main": "index.js",
  "type": "module",
  "engines": {
    "node": "v20.10.0",
    "npm": "10.2.3"
  },
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "dev": "firebase emulators:start --import=./data/ --export-on-exit=./data",
    "serve": "firebase emulators:start --import=./data/",
    "shell": "firebase functions:shell",
    "emulators:firestore": "firebase emulators:start --only firestore",
    "emulators:kill": "lsof -t -i tcp:9099 | xargs kill && lsof -t -i tcp:5001 | xargs kill && lsof -t -i tcp:8080 | xargs kill && lsof -t -i tcp:9000 | xargs kill && lsof -t -i tcp:8085 | xargs kill && lsof -t -i tcp:9199 | xargs kill && lsof -t -i tcp:4500 | xargs kill && lsof -t -i tcp:9150 | xargs kill && lsof -t -i tcp:4000 | xargs kill",
    "start": "npm run shell",
    "logs": "firebase functions:log",
    "local:nodeScript": "export GOOGLE_APPLICATION_CREDENTIALS='service-account.json' && export FIRESTORE_EMULATOR_HOST='localhost:8080' && run(){ node -r dotenv/config nodeScripts/$1; }; run",
    "develop:nodeScript": "export GOOGLE_APPLICATION_CREDENTIALS='service-account.json' && run(){ node --trace-warnings -r dotenv/config nodeScripts/$1; }; run",
    "live:nodeScript": "export GOOGLE_APPLICATION_CREDENTIALS='service-account.live.json' && run(){ node -r dotenv/config nodeScripts/$1; }; run",
    "nodeScriptOnWindows": "set GOOGLE_APPLICATION_CREDENTIALS=service-account.json&& node nodeScripts/%SCRIPT%",
    "indexes:export": "firebase firestore:indexes > database/firestore.indexes.json --project=jac-qualifying-tests-develop",
    "live:indexes:export": "firebase firestore:indexes > database/firestore.indexes.json --project=jac-qualifying-tests-live",
    "deploy": "firebase deploy --project=jac-qualifying-tests-develop",
    "deploy:rules": "firebase deploy --project=jac-qualifying-tests-develop --only firestore:rules",
    "deploy:indexes": "firebase deploy --project=jac-qualifying-tests-develop --only firestore:indexes",
    "deploy:functions": "firebase deploy --project=jac-qualifying-tests-develop --only functions --force",
    "deploy:function": "run(){ firebase deploy --project=jac-qualifying-tests-develop --only functions:$1; }; run",
    "deploy:storage-rules": "firebase deploy --project=jac-qualifying-tests-develop --only storage:rules",
    "deploy:realtime-rules": "firebase deploy --project=jac-qualifying-tests-develop --only database",
    "live:deploy:rules": "firebase deploy --project=jac-qualifying-tests-live --only firestore:rules",
    "live:deploy:indexes": "firebase deploy --project=jac-qualifying-tests-live --only firestore:indexes",
    "live:deploy:functions": "firebase deploy --project=jac-qualifying-tests-live --only functions",
    "live:deploy:function": "run(){ firebase deploy --project=jac-qualifying-tests-live --only functions:$1; }; run",
    "live:deploy:storage-rules": "firebase deploy --project=jac-qualifying-tests-live --only storage:rules",
    "live:deploy:realtime-rules": "firebase deploy --project=jac-qualifying-tests-live --only database",
    "test:rules": "export FIRESTORE_EMULATOR_HOST='localhost:8080' && mocha './test/rules/**/*.spec.js' --timeout=10000",
    "test:functions": "mocha './test/functions/**/*.spec.js' --timeout=10000",
    "test:actions": "NODE_OPTIONS=--experimental-vm-modules jest test/actions",
    "test:shared": "NODE_OPTIONS=--experimental-vm-modules jest test/shared",
    "watch:test:rules": "export FIRESTORE_EMULATOR_HOST='localhost:8282' && mocha './test/rules/**/*.spec.js' --timeout=10000 --reporter=min --watch --watch-extensions=rules",
    "ci:test:rules": "firebase emulators:exec --only firestore 'npm run test:rules'",
    "db:export": "firestore-export -a ./service-account.json -b ./data/firestore.json",
    "db:import": "firestore-import -a ./service-account.json -b ./data/firestore.json",
    "db:emulator:export": "set \"FIRESTORE_EMULATOR_HOST=localhost:8080\" && npm run db:export",
    "db:emulator:import": "set \"FIRESTORE_EMULATOR_HOST=localhost:8080\" && npm run db:import",
    "firestore": "firebase emulators:start --only firestore --import=./data/ --export-on-exit=./data"
  },
  "dependencies": {
    "@google-cloud/storage": "^5.7.2",
    "firebase": "^11.0.1",
    "firebase-admin": "^12.1.1",
    "firebase-functions": "^5.0.1",
    "firebase-functions-test": "^3.2.0",
    "firebase-tools": "^13.24.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^6.0.0-alpha.5",
    "@firebase/rules-unit-testing": "^4.0.0",
    "csv-writer": "^1.6.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.18.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-promise": "^4.2.1",
    "firestore-size": "^2.0.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "mocha": "^10.4.0"
  },
  "private": true
}
